<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Entrada al Portfolio</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label >Titulo </label>
                    <input type="text" class="form-control" placeholder="titulo" name="titulo"
                        value="{{novedad.titulo}}">
                </div>

                <div class="form-group">
                    <label >Subtitulo </label>
                    <input type="text" class="form-control" placeholder="subtitulo" name="subtitulo" value="{{novedad.subtitulo}}" >
                </div>
                <div class="form-group">
                    <label >Cuerpo </label>
                    <textarea name ="cuerpo" class="form-control" >{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>

            {{#if error}}
            <p>{{message}}</p>
            {{/if}}

        </div>

    </div>


</div>